<%= render "shared/header" %>

<div class="events_new_main">

<h3>カレンダーに予定を登録する</h3>

<%= form_with(model: @event, local: true) do |form| %>
  
  <div class="events_item">
    ■ 予定を入力してください　　　　<%= form.text_field :title %>
  </div>
  <div class="events_item">
    ■ 日付・時間を入力してください　<%= form.datetime_select :start_time %>
  </div>
  <div class="events_item">
    ■ 予定の詳細を入力してください　<%= form.text_field :content %>
  </div>
  <div class="events_item">
    <%= form.submit %>
  </div>

<% end %>

<%= link_to "戻る", root_path, class: "back_btn" %>

</div>